{
  "manager": {
    "model": "claude-sonnet-4-5-20250929",
    "max_history_messages": 20,
    "max_turns": 10,
    "token_management": {
      "enable_token_precheck": true,
      "max_context_tokens": 200000,
      "max_output_tokens": 8000,
      "context_warning_threshold": 0.7,
      "context_critical_threshold": 0.9
    }
  },
  "resilience": {
    "circuit_breaker": {
      "failure_threshold": 5,
      "success_threshold": 2,
      "timeout_seconds": 60,
      "enable_per_worker": true
    }
  },
  "timeouts": {
    "default_worker_timeout": 1200,
    "max_worker_timeout": 3600,
    "planner_timeout": 1200,
    "coder_timeout": 1200,
    "reviewer_timeout": 1200,
    "tester_timeout": 1200,
    "committer_timeout": 1200,
    "documenter_timeout": 1200
  },
  "workflow_limits": {
    "max_retry_cycles": 3,
    "max_review_iterations": 3,
    "max_coder_retries": 2
  },
  "performance": {
    "enable_caching": true,
    "planner_cache_enabled": true,
    "worker_retry_enabled": true,
    "worker_retry_max_attempts": 3,
    "worker_retry_base_delay": 1.0,
    "worker_retry_max_delay": 30.0,
    "worker_retry_jitter": 0.1,
    "worker_retry_exponential": true,
    "metrics_buffer_size": 1000,
    "metrics_flush_interval": 5.0,
    "cache_ttl_seconds": 3600,
    "cache_max_size": 100,
    "enable_session_compression": true,
    "enable_background_save": true,
    "enable_async_metrics": true
  },
  "security": {
    "max_input_length": 5000,
    "enable_input_validation": true
  },
  "logging": {
    "level": "DEBUG",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "enable_structured_logging": false
  },
  "storage": {
    "backend": "sqlite",
    "json_dir": "sessions",
    "retention_days": 90
  },
  "templates": {
    "storage_path": "~/.better-llm/templates",
    "builtin_enabled": true
  },
  "approval": {
    "enabled": false,
    "timeout_seconds": 1200,
    "approval_points": {
      "before_code_write": true,
      "after_code_write": true,
      "before_test_run": false,
      "before_deployment": false
    },
    "max_feedback_length": 8000,
    "auto_approve_on_timeout": false
  },
  "workflow": {
    "auto_commit_enabled": false
  },
  "interaction": {
    "enabled": false,
    "allow_questions": true,
    "timeout_seconds": 600,
    "auto_fallback": "first"
  },
  "parallel_execution": {
    "enabled": true,
    "max_concurrent_tasks": 5,
    "continue_on_error": false,
    "min_tasks_for_parallel": 3
  },
  "parallel_tasks": {
    "auto_close_tabs": true,
    "auto_close_delay_seconds": 5
  },
  "context_metadata": {
    "enabled": true,
    "description": "Structured Context Metadata - Worker 출력에 메타데이터 포함하여 Manager가 컨텍스트 자동 추적"
  },
  "context_management": {
    "max_turns": null,
    "continue_conversation": false,
    "setting_sources": ["user", "project"],
    "description": "컨텍스트 관리 옵션 - max_turns: 최대 대화 턴 수 (null이면 무제한), continue_conversation: 이전 세션 재개 여부, setting_sources: 설정 파일 로드 소스"
  },
  "permission": {
    "mode": "bypassPermissions",
    "description": "권한 모드 - default: 사용자 승인 요청, acceptEdits: 파일 편집 자동 승인, bypassPermissions: 모든 작업 자동 승인 (테스트 환경만 사용!)"
  },
  "hooks": {
    "enable_validation": true,
    "enable_monitoring": true,
    "description": "Hooks 시스템 - PreToolUse: Worker 입력 검증, PostToolUse: Worker 실행 모니터링"
  }
}
