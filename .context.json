{
  "project_name": "better-llm",
  "language": "python",
  "framework": "claude-agent-sdk",
  "architecture": "Clean Architecture (4-Layer)",
  "key_files": {
    "entry_points": {
      "cli": "orchestrator.py",
      "tui": "tui.py"
    },
    "domain": {
      "models": "src/domain/models/",
      "agents": "src/domain/agents/base.py",
      "services": "src/domain/services/"
    },
    "application": {
      "ports": "src/application/ports/"
    },
    "infrastructure": {
      "manager": "src/infrastructure/claude/manager_client.py",
      "worker": "src/infrastructure/claude/worker_client.py",
      "worker_tools": "src/infrastructure/mcp/worker_tools.py",
      "config": "src/infrastructure/config/",
      "storage": "src/infrastructure/storage/"
    },
    "presentation": {
      "cli": "src/presentation/cli/orchestrator.py",
      "tui": "src/presentation/tui/tui_app.py",
      "utils": "src/presentation/cli/utils.py"
    },
    "config": "config/agent_config.json",
    "system_config": "config/system_config.json"
  },
  "coding_style": {
    "docstring_style": "google",
    "type_hints": true,
    "line_length": 100,
    "quote_style": "double",
    "import_style": "absolute"
  },
  "dependencies": [
    "claude-agent-sdk",
    "textual",
    "rich",
    "click",
    "python-dotenv",
    "pytest",
    "pytest-asyncio"
  ],
  "testing": {
    "framework": "pytest",
    "test_directory": "tests/"
  },
  "description": "그룹 챗 오케스트레이션 시스템 - Clean Architecture 기반, Manager Agent가 Worker Tools를 호출하여 소프트웨어 개발 작업 자동화"
}